{
  "name": "website-template-server",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node dist/server.js",
    "build": "npm run lint:fix && tsc -p . && ncp src/schema dist/schema",
    "start:dev": "npm run codegen && npm run build:dev",
    "build:dev": "nodemon 'src/server.ts' --exec 'ts-node'  src/server.ts -e ts,graphql",
    "start:dev-cdn": "pm2 start pm2.config.json",
    "start:local-cdn": "npm run build:local-cdn",
    "build:local-cdn": "nodemon 'src/cdn.ts' --exec 'ts-node' src/cdn.ts",
    "lint": "eslint . --ext .ts,.js --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "test": "npm run lint && jest --ci",
    "codegen": "graphql-codegen --config codegen.yml"
  },
  "dependencies": {
    "@apollo/server": "^4.8.1",
    "@graphql-tools/load-files": "^7.0.0",
    "apollo-server-express": "^3.12.0",
    "compression": "^1.7.4",
    "config": "^3.3.9",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "graphql": "^16.7.1",
    "graphql-tools": "^9.0.0",
    "http": "^0.0.1-security",
    "ncp": "^2.0.0",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^4.0.1",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@types/compression": "^1.7.2",
    "@types/config": "^3.3.0",
    "@types/express": "^4.17.17",
    "@types/graphql": "^14.5.0",
    "@types/graphql-depth-limit": "^1.1.3",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.3",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "eslint": "^8.45.0",
    "graphql-codegen-typescript-common": "0.18.2",
    "graphql-depth-limit": "^1.1.0",
    "graphql-import-node": "^0.0.5",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
